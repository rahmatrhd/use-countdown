{
  "name": "use-countdown",
  "version": "1.1.1",
  "description": "Countdown with react hooks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rahmatrhd/use-countdown.git"
  },
  "keywords": [
    "react-hooks",
    "react",
    "hooks",
    "time",
    "countdown"
  ],
  "author": "Rahmat HD",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rahmatrhd/use-countdown/issues"
  },
  "homepage": "https://github.com/rahmatrhd/use-countdown#readme",
  "devDependencies": {
    "@types/node": "^11.11.3",
    "@types/react": "^16.8.8",
    "prettier": "^1.16.4",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "react": "^16.8.3"
  },
  "files": [
    "lib/**/*"
  ]
}
